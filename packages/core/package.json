{
	"name": "@zoboz/core",
	"version": "4.1.2",
	"description": "zoboz | d.ts + esm + cjs - hassle",
	"homepage": "https://github.com/zobozjs/zoboz#readme",
	"bugs": {
		"url": "https://github.com/zobozjs/zoboz/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zobozjs/zoboz.git"
	},
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"files": ["dist/", "bin/", "cli/"],
	"license": "MIT",
	"author": "Dariush Alipour <drsh.alipour@gmail.com>",
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/dts/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/dts/index.d.ts",
			"require": "./dist/cjs/index.js",
			"import": "./dist/esm/index.js"
		},
		"./extend": {
			"types": "./dist/dts/extend.d.ts",
			"require": "./dist/cjs/extend.js",
			"import": "./dist/esm/extend.js"
		}
	},
	"bin": {
		"zoboz": "bin/zoboz.mjs"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "node ./scripts/build.mjs",
		"test": "node --import 'data:text/javascript,import { register } from \"node:module\"; import { pathToFileURL } from \"node:url\"; register(\"./cli/tsload.mjs\", pathToFileURL(\"./\"));' --test tests/index.test.ts"
	},
	"devDependencies": {
		"@cucumber/cucumber": "^11.2.0",
		"@types/node": "22.10.5",
		"@types/tmp": "^0.2.6",
		"tmp": "^0.2.3",
		"typescript": "5.7.3"
	},
	"dependencies": {
		"@zoboz/bam": "1.3.2",
		"esbuild": "0.25.1",
		"oxc-resolver": "5.0.0"
	}
}
